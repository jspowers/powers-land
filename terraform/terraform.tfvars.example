# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

aws_region        = "us-east-1"
instance_type     = "t3.micro"
key_name          = "powers-land-keypair"
domain_name       = "powers.land"
allowed_ssh_cidr  = "YOUR_IP_ADDRESS/32"  # Replace with your IP
app_secret_key    = "generate-a-secure-random-key-here"
ssl_email         = "your-email@example.com"  # For Let's Encrypt, or leave empty to skip SSL
